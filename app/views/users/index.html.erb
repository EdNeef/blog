<div class="text-center">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
<div class="row bg-warning" style="padding: 20px; margin: 30px 0; border: 1px solid #999;">
  <h3><%= link_to user.username, user_path(user) %></h3>
  <p><%= pluralize(user.articles.count, "blogpost") if user.articles %></p>
  <% if logged_in? and current_user.admin? %>
    <%= link_to "Verwijder deze gebruiker", user_path(user), method: :delete,
    data: { confirm: "Weet je dit zeker?" }, class: "btn btn-danger" %>
  <% end %>
</div>
<% end %>
<div class="text-center">
  <%= will_paginate %>
</div>