<h1>Listing all articles</h1>

<button class="btn btn-default btn-lg" type="submit"><%= link_to "Create new article", new_article_path %></button>

<% @articles.each do |article| %>
<div class="row bg-warning" style="padding: 20px; margin: 30px 0; border: 1px solid #999;">
  <h3><%= article.title %></h3>
  <p><%= article.description %></p>
  <button class="btn btn-default" type="submit"><%= link_to "Edit article", edit_article_path(article) %></button>
  <button class="btn btn-default" type="submit"><%= link_to "View full article", article_path(article) %></button>
  <button class="btn btn-default btn-sm" type="submit"><%= link_to "Delete article", article_path(article), method: :delete, data: {confirm: "Weet je het zeker?"} %></button>
</div>
<% end %>